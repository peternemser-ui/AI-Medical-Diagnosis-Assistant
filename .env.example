# Environment Configuration Example
# Copy this file to .env and fill in your values

# ===========================================
# API Keys
# ===========================================
OPENAI_API_KEY=sk-your-openai-api-key-here
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=eastus

# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/medical_diagnosis
REDIS_URL=redis://localhost:6379

# ===========================================
# Authentication
# ===========================================
SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# Application Settings
# ===========================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ===========================================
# Email Configuration (Optional)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@medicaldiagnosis.ai
FROM_NAME=Medical Diagnosis AI

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_PER_MINUTE=20
RATE_LIMIT_BURST=5

# ===========================================
# File Storage (Optional)
# ===========================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=medical-diagnosis-uploads
AWS_REGION=us-east-1

# ===========================================
# Monitoring (Optional)
# ===========================================
SENTRY_DSN=https://your-sentry-dsn
ANALYTICS_ID=UA-XXXXXXXXX-X
